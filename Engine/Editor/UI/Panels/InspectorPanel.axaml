<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"

             x:Class="Friflo.Fliox.Editor.UI.Panels.InspectorPanel"
             xmlns:inspector ="using:Friflo.Fliox.Editor.UI.Controls.Inspector">
    <Border BorderThickness="1" BorderBrush="{DynamicResource PanelBorder}" CornerRadius="{DynamicResource Radius}" Background="{DynamicResource PanelBackground1}">
    <DockPanel >
        <Border Background="{DynamicResource PanelBackground2}" CornerRadius="{DynamicResource RadiusTop}" DockPanel.Dock="Top">
            <Label  HorizontalAlignment="Center">Inspector</Label>    
        </Border>
        <inspector:InspectorControl/>
    </DockPanel>
    </Border>
</UserControl>