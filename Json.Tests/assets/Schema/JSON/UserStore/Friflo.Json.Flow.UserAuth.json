{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Role": {
            "type": "object",
            "properties": {
                "id":     { "type": "string" },
                "rights": { "type": "array", "items": { "$ref": "Right_Union" } }
            }
        },
        "UserCredential": {
            "type": "object",
            "properties": {
                "id":       { "type": "string" },
                "passHash": { "type": "string" },
                "token":    { "type": "string" }
            }
        }
    }
}

