{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Right": {
            "oneOf": [
                { "$ref": "allow" },
                { "$ref": "task" },
                { "$ref": "message" },
                { "$ref": "subscribeMessage" },
                { "$ref": "database" },
                { "$ref": "predicate" }
            ],
            "properties": {
                "description": { "type": "string" }
            }
        },
        "RightAllow": {
            "type": "object",
            "properties": {
                "type":        { "enum": ["allow"] },
                "grant":       { "type": "boolean" }
            }
        },
        "RightTask": {
            "type": "object",
            "properties": {
                "type":        { "enum": ["task"] },
                "types":       { "type": "array", "items": { "$ref": "TaskType" } }
            }
        },
        "RightMessage": {
            "type": "object",
            "properties": {
                "type":        { "enum": ["message"] },
                "names":       { "type": "array", "items": { "type": "string" } }
            }
        },
        "RightSubscribeMessage": {
            "type": "object",
            "properties": {
                "type":        { "enum": ["subscribeMessage"] },
                "names":       { "type": "array", "items": { "type": "string" } }
            }
        },
        "RightDatabase": {
            "type": "object",
            "properties": {
                "type":        { "enum": ["database"] },
                "containers":  { "type": "object", "additionalProperties": { "$ref": "ContainerAccess" } }
            }
        },
        "ContainerAccess": {
            "type": "object",
            "properties": {
                "operations":       { "type": "array", "items": { "$ref": "OperationType" } },
                "subscribeChanges": { "type": "array", "items": { "$ref": "Change" } }
            }
        },
        "OperationType": {
            "enum": [
                "create",
                "update",
                "delete",
                "patch",
                "read",
                "query",
                "mutate",
                "full"
            ]
        },
        "RightPredicate": {
            "type": "object",
            "properties": {
                "type":        { "enum": ["predicate"] },
                "names":       { "type": "array", "items": { "type": "string" } }
            }
        }
    }
}

