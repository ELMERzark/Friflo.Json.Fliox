{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Role",
    "definitions": {
        "Database.Auth.Right": {
            "oneOf": [
                { "$ref": "#/definitions/Database.Auth.RightAllow" },
                { "$ref": "#/definitions/Database.Auth.RightDatabase" },
                { "$ref": "#/definitions/Database.Auth.RightMessage" },
                { "$ref": "#/definitions/Database.Auth.RightSubscribeMessage" },
                { "$ref": "#/definitions/Database.Auth.RightPredicate" },
                { "$ref": "#/definitions/Database.Auth.RightTask" }
            ]
        },
        "Database.Auth.RightAllow": {
            "type": "object",
            "properties": {
                "type":         { "enum": [ "allow" ] },
                "grant":        { "type": "boolean" }
            },
            "additionalProperties": false
        },
        "Database.Auth.RightDatabase": {
            "type": "object",
            "properties": {
                "type":         { "enum": [ "database" ] },
                "containers":   { "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/Database.Auth.ContainerAccess" }
                }
            },
            "additionalProperties": false
        },
        "Database.Auth.ContainerAccess": {
            "type": "object",
            "properties": {
                "operations":   { "type": "array",
                    "items": { "enum": [ "create", "update", "delete", "patch", "read", "query", "mutate", "full" ] }
                },
                "subscribeChanges": { "type": "array",
                    "items": { "enum": [ "create", "update", "delete", "patch" ] }
                }
            },
            "additionalProperties": false
        },
        "Database.Auth.RightMessage": {
            "type": "object",
            "properties": {
                "type":         { "enum": [ "message" ] },
                "names":        { "type": "array",
                    "items":        { "type": "string" }
                }
            },
            "additionalProperties": false
        },
        "Database.Auth.RightSubscribeMessage": {
            "type": "object",
            "properties": {
                "type":         { "enum": [ "subscribeMessage" ] },
                "names":        { "type": "array",
                    "items":        { "type": "string" }
                }
            },
            "additionalProperties": false
        },
        "Database.Auth.RightPredicate": {
            "type": "object",
            "properties": {
                "type":         { "enum": [ "predicate" ] },
                "names":        { "type": "array",
                    "items":        { "type": "string" }
                }
            },
            "additionalProperties": false
        },
        "Database.Auth.RightTask": {
            "type": "object",
            "properties": {
                "type":         { "enum": [ "task" ] },
                "types":        { "type": "array",
                    "items":        { "enum": [
                        "read", "query", "create", "update", "patch", "delete",
                        "message", "subscribeChanges", "subscribeMessage"] }
                }
            },
            "additionalProperties": false
        }
    }
}
