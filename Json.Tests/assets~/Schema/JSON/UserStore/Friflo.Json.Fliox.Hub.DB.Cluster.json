{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Generated by: https://github.com/friflo/Friflo.Json.Fliox/tree/main/Json/Fliox/Schema",
    "definitions": {
        "DbContainers": {
            "type": "object",
            "properties": {
                "id":         { "type": "string" },
                "storage":    { "type": "string" },
                "containers": { "type": "array", "items": { "type": "string" } }
            },
            "required": [
                "id",
                "storage",
                "containers"
            ],
            "additionalProperties": false
        },
        "DbMessages": {
            "type": "object",
            "properties": {
                "id":       { "type": "string" },
                "commands": { "type": "array", "items": { "type": "string" } },
                "messages": { "type": "array", "items": { "type": "string" } }
            },
            "required": [
                "id",
                "commands",
                "messages"
            ],
            "additionalProperties": false
        },
        "DbSchema": {
            "type": "object",
            "properties": {
                "id":          { "type": "string" },
                "schemaName":  { "type": "string" },
                "schemaPath":  { "type": "string" },
                "jsonSchemas": { "additionalProperties": {  }, "type": "object" }
            },
            "required": [
                "id",
                "schemaName",
                "schemaPath",
                "jsonSchemas"
            ],
            "additionalProperties": false
        },
        "DbStats": {
            "type": "object",
            "properties": {
                "containers": { "type": ["array", "null"], "items": { "$ref": "#/definitions/ContainerStats" } }
            },
            "additionalProperties": false
        },
        "ContainerStats": {
            "type": "object",
            "properties": {
                "name":  { "type": "string" },
                "count": { "$ref": "./Standard.json#/definitions/int64" }
            },
            "required": [
                "name",
                "count"
            ],
            "additionalProperties": false
        },
        "HostDetails": {
            "type": "object",
            "properties": {
                "version":        { "type": "string" },
                "hostName":       { "type": ["string", "null"] },
                "projectName":    { "type": ["string", "null"] },
                "projectWebsite": { "type": ["string", "null"] },
                "envName":        { "type": ["string", "null"] },
                "envColor":       { "type": ["string", "null"], "description": "the color used to display the environment name in GUI's using CSS color format.<br/>\n            E.g. using red for a production environment: '#ff0000' or 'rgb(255 0 0)'" }
            },
            "required": [
                "version"
            ],
            "additionalProperties": false
        },
        "HostCluster": {
            "type": "object",
            "properties": {
                "databases": { "type": "array", "items": { "$ref": "#/definitions/DbContainers" } }
            },
            "required": [
                "databases"
            ],
            "additionalProperties": false
        }
    }
}

