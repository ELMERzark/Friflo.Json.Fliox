<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Friflo.Fliox.Editor.UI.Panels"
        xmlns:openGl="clr-namespace:Friflo.Fliox.Editor.OpenGL"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
        x:Class="Friflo.Fliox.Editor.UI.MainWindow"
        Background="{DynamicResource AppBackground}"
        Title="Fliox Editor">
    <DockPanel>
        <Rectangle        Height="30"   DockPanel.Dock="Top"    Fill="{DynamicResource AppBackground}"/>
        <Rectangle        Height="6"    DockPanel.Dock="Top"    Fill="{DynamicResource AppBackground}"/>
        <Rectangle        Height="30"   DockPanel.Dock="Bottom" Fill="{DynamicResource AppBackground}"/>
        <Rectangle        Height="6"    DockPanel.Dock="Bottom" Fill="{DynamicResource AppBackground}"/>
        <ui:ExplorerPanel Width="300"   DockPanel.Dock="Left" />
        <Rectangle        Width="6"     DockPanel.Dock="Left"   Fill="{DynamicResource AppBackground}"/>
        <DockPanel        Width="300"   DockPanel.Dock="Right" >
            <ui:TestPanel       DockPanel.Dock="Top" />
            <Rectangle    Height="6"    DockPanel.Dock="Top"    Fill="{DynamicResource AppBackground}"/>
            <ui:ExplorerPanel   DockPanel.Dock="Top" Height="200"/>
            <Rectangle    Height="6"    DockPanel.Dock="Top"    Fill="{DynamicResource AppBackground}"/>
            <ui:InspectorPanel/>
        </DockPanel>
        <Rectangle        Width="6"     DockPanel.Dock="Right"  Fill="{DynamicResource AppBackground}"/>
        <openGl:SilkOpenGLControl Name="OpenGlControl" />
    </DockPanel>
</Window>