{
    "type": "sync",
    "tasks": [
    {
      "task":       "query",
      "info":       "query all articles, their referenced .producer (and the .employees[*] referenced by .producer)",
      "container":  "articles",
      "filterLinq": "true",
      "filter":     { "op":"true" },
      "references": [
        {
          "selector": ".producer",
          "container": "producers",
          "references": [
            {
              "selector": ".employees[*]",
              "container": "employees"
            }
          ]
        }
      ]
    }
  ]
}