<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             Background="#ddd"
             x:Class="Friflo.Fliox.Editor.UI.ExplorerPanel"
             x:CompileBindings="True"
             xmlns:vm="using:Friflo.Fliox.Editor.UI.Models"
             x:DataType="vm:ExplorerPanelViewModel">
        <StackPanel Orientation="Vertical" Spacing="8">
            <TreeDataGrid Name="dragDrop"
                          Source="{Binding DragDrop.Source}"
                          AutoDragDropRows="True"
                          RowDragStarted="DragDrop_RowDragStarted"
                          RowDragOver="DragDrop_RowDragOver"/>
        </StackPanel>
</UserControl>
