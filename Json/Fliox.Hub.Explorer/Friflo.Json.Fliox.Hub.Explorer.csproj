<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>7.3</LangVersion>
        <Title>friflo Json.EntityGraph</Title>
        <Authors>Ullrich Praetz</Authors>
        <Description>Fliox.Hub.Explorer contains a Single Page Web Application by a set of static web files like html, js, png, svg and json</Description>
        <Copyright>Ullrich Praetz</Copyright>
        <PackageProjectUrl>https://github.com/friflo/Friflo.Json.Burst</PackageProjectUrl>
        <RepositoryUrl>git@github.com:friflo/Friflo.Json.Burst.git</RepositoryUrl>
        <PackageLicenseUrl>https://github.com/friflo/Friflo.Json.Burst/blob/main/LICENSE</PackageLicenseUrl>
        <PackageIconUrl>https://github.com/friflo/Friflo.Json.Burst/blob/main/docs/images/Friflo.Json.Burst-128.png?raw=true</PackageIconUrl>
        <PackageVersion>0.1.0</PackageVersion>
        <RepositoryType>git</RepositoryType>

        <!-- ContentTargetFolders default: content;contentFiles => copy all files to both folder when pack as nuget package -->
        <ContentTargetFolders>contentFiles</ContentTargetFolders>
        <!-- IncludeBuildOutput true ensures <Content> files are copied to output in project importing the nuget package -->
        <IncludeBuildOutput>true</IncludeBuildOutput>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <OutputPath>.bin\Debug\</OutputPath>
      <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <OutputPath>.bin\Release\</OutputPath>
      <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    </PropertyGroup>
		
    <ItemGroup>
      <None Remove="**/*.meta" />
    </ItemGroup>
    
    <ItemGroup>
      <Content Include="www~\**\*.*" Exclude="www~\**\*.js.map;www~\page\**\*.*;www~\src\**\*.*;www~\manifest.json;www~\sw.js">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        <PackageCopyToOutput>true</PackageCopyToOutput>
      </Content>
    </ItemGroup>

</Project>
