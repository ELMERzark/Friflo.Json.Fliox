    "dotnet-test-explorer.testProjectPath": "Json.Tests",
    "editor.detectIndentation": false,
    "json.schemas": [
        { "fileMatch": ["/Json.Tests/assets~/DB/user_db/roles/*.json"],                   "url": "./Json.Tests/assets~/Schema/JSON/UserStore/Friflo.Json.Fliox.Hub.DB.UserAuth.Role.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/user_db/credentials/*.json"],             "url": "./Json.Tests/assets~/Schema/JSON/UserStore/Friflo.Json.Fliox.Hub.DB.UserAuth.UserCredential.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/user_db/permissions/*.json"],             "url": "./Json.Tests/assets~/Schema/JSON/UserStore/Friflo.Json.Fliox.Hub.DB.UserAuth.UserPermission.json" },

        { "fileMatch": ["/Json.Tests/assets~/DB/main_db/articles/*.json"],                 "url": "./Json.Tests/assets~/Schema/JSON/PocStore/UnitTest.Fliox.Client.Article.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/main_db/customers/*.json"],                "url": "./Json.Tests/assets~/Schema/JSON/PocStore/UnitTest.Fliox.Client.Customer.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/main_db/employees/*.json"],                "url": "./Json.Tests/assets~/Schema/JSON/PocStore/UnitTest.Fliox.Client.Employee.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/main_db/orders/*.json"],                   "url": "./Json.Tests/assets~/Schema/JSON/PocStore/UnitTest.Fliox.Client.Order.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/main_db/producers/*.json"],                "url": "./Json.Tests/assets~/Schema/JSON/PocStore/UnitTest.Fliox.Client.Producer.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/main_db/types/*.json"],                    "url": "./Json.Tests/assets~/Schema/JSON/PocStore/UnitTest.Fliox.Client.TestType.json" },

        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/guidEntities/*.json"],        "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.GuidEntity.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/intEntities/*.json"],         "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.IntEntity.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/longEntities/*.json"],        "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.LongEntity.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/shortEntities/*.json"],       "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.ShortEntity.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/byteEntities/*.json"],        "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.ByteEntity.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/customIdEntities/*.json"],    "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.CustomIdEntity.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/customIdEntities2/*.json"],   "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.CustomIdEntity2.json" },
        { "fileMatch": ["/Json.Tests/assets~/DB/entity_id_db/entityRefs/*.json"],          "url": "./Json.Tests/assets~/Schema/JSON/EntityIdStore/UnitTest.Fliox.Client.EntityRefs.json" },

        { "fileMatch": ["/**/*.sync.json"],        "url": "./Json.Tests/assets~/Schema/JSON/Protocol/Friflo.Json.Fliox.Hub.Protocol.ProtocolRequest.json"  },
        { "fileMatch": ["/**/*.sync.resp.json"],   "url": "./Json.Tests/assets~/Schema/JSON/Protocol/Friflo.Json.Fliox.Hub.Protocol.ProtocolResponse.json" }        
        
    ],
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        "Json.Tests/www~/example-requests/**/*.*"
    ],
    "explorer.compactFolders": false,
    "[markdown]": {
        "editor.wordWrap": "off"
    },
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.preview.markEditorSelection": false,
    "workbench.colorCustomizations": {
        "diffEditor.insertedTextBackground": "#00ff0040",    // previous
        "diffEditor.removedTextBackground":  "#ff000020",     // previous
    
        // Background color for lines that got inserted/removed. 
        // The color must not be opaque so as not to hide underlying decorations.
        "diffEditor.insertedLineBackground": "#00ff0018",   // rest are new
        "diffEditor.removedLineBackground":  "#ff000018",
    },
    // "omnisharp.enableImportCompletion": true,
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.defaultSolution": "Friflo.Json.Fliox.sln",
    "references.preferredLocation": "view",
    // disable: Code Lens references in text editors
    "editor.codeLens": false
}