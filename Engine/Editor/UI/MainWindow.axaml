<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Friflo.Fliox.Editor.UI"
        xmlns:openGl="clr-namespace:Friflo.Fliox.Editor.OpenGL"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Friflo.Fliox.Editor.UI.MainWindow"
        Background="Transparent"
        Title="Fliox Editor">
        <DockPanel >
                <Rectangle      Height="30"     DockPanel.Dock="Top"    Fill="#eee" />
                <Rectangle      Height="100"    DockPanel.Dock="Bottom" Fill="#eee" />
                <ui:TestPanel   Width="200"     DockPanel.Dock="Left"/>
                <Rectangle      Width="200"     DockPanel.Dock="Right"  Fill="#ddd"/>
                <openGl:SilkOpenGLControl Name="OpenGlControl"/>
        </DockPanel>
</Window>
