<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Friflo.Fliox.Editor.UI.Controls.Inspector.StringValue"
             xmlns:local="clr-namespace:Friflo.Fliox.Editor.UI.Controls.Inspector"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="30">

    <TextBox MinHeight="1" Height="22" MaxHeight="22" BorderBrush="{DynamicResource ComponentBackground}"
             BorderThickness="0" HorizontalAlignment="Right"
             Background="{DynamicResource EditBackground}"
             Width= "200"  Margin="2 1 6 0" Padding="3 3 3 0"
             Text="{Binding $parent[local:StringValue].Value}">
    </TextBox>
</UserControl>